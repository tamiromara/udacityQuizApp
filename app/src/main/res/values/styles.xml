<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The bold in caps title above the actual question -->
    <style name="QuestionTitle">
        <item name="android:textColor">@color/blueHeader</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- This is the question text -->
    <style name="QuestionText">
        <item name="android:textColor">@color/blueText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- This is for the question options  -->
    <style name="AnswersText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

</resources>
